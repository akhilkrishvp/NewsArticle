<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/articleImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/download"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        />
    <ImageView
        android:id="@+id/rightArrowImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow_right_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/articleTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="asdfSDF ASDF ASDF ASD FA SDF AS DF ASD F ASD FA SDF AS DF ASDF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rightArrowImageView"
        app:layout_constraintLeft_toRightOf="@+id/articleImageView"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/articleByLineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:alpha="0.7"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="By DAVID BARSTOW, SUSANNE CRAIG and RUSS BUETTNER"
        app:layout_constraintTop_toBottomOf="@+id/articleTitleTextView"
        app:layout_constraintRight_toLeftOf="@+id/rightArrowImageView"
        app:layout_constraintLeft_toRightOf="@+id/articleImageView"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/articlePublishDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:alpha="0.7"
        android:text="2018-10-02"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/articleByLineTextView"
        app:layout_constraintRight_toLeftOf="@+id/rightArrowImageView"
        />
    <ImageView
        android:id="@+id/calendarImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:alpha="0.7"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/calendar"
        app:layout_constraintTop_toBottomOf="@+id/articleByLineTextView"
        app:layout_constraintRight_toLeftOf="@+id/articlePublishDateTextView"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/articleSourceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:alpha="0.7"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="The New York Times"
        app:layout_constraintTop_toBottomOf="@+id/articleByLineTextView"
        app:layout_constraintRight_toLeftOf="@+id/calendarImageView"
        app:layout_constraintLeft_toRightOf="@+id/articleImageView"/>
</android.support.constraint.ConstraintLayout>